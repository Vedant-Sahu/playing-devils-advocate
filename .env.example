# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# Default model for agents
MODEL_NAME=gpt-4o-mini

# Optional: Use different models for different agents to optimize costs
# Teacher and Grading agents benefit from stronger reasoning (gpt-4o)
TEACHER_MODEL=gpt-4o-mini
GRADING_MODEL=gpt-4o-mini
COORDINATOR_MODEL=gpt-4o-mini

# Student and Critique agents can use lighter models (gpt-4o-mini) to save costs
STUDENT_MODEL=gpt-4o-mini
CRITIQUE_EVAL_MODEL=gpt-4o-mini

# Temperature controls randomness (0.0 = deterministic, 1.0 = creative)
# Lower values (0.3-0.5) recommended for grading consistency
TEMPERATURE=0.7

# Hugging Face Access Token
HF_TOKEN=your_token_here